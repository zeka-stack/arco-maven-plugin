<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>makeself</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <!-- 将 dockerfiel jar 包 -->
            <directory>${project.basedir}/docker</directory>
            <outputDirectory>META-INF/docker</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/embed</directory>
            <outputDirectory>META-INF/assembly</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!-- Include previously compiled and jar code -->
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory/>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
